<h2>新規登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label 'ニックネーム' %><br />
    <%= f.text_field :name, autofocus: true, placeholder:"例) conomi太郎", autocomplete: "name" %>
  </div>


  <div class="field">
    <%= f.label 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, placeholder:"PC・携帯どちらでも可", autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="field">
    <%= f.label 'パスワード(確認)' %><br />
    <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力して下さい", autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label '生年月日' %><br />
    <%= f.date_select :birthday, { 
  prompt: { day: '日', month: '月', year: '年' },
  start_year: 1930,
  end_year: 2024,
  use_month_numbers: true
} %>
  </div>
  <div class="field">
    <%= f.label '性別を選択' %><br />
    <%= f.select :gender, [['女性', 'female'], ['男性', 'male']], prompt: '---' %>
  </div>
  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
