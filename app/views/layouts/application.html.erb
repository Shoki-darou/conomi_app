<!DOCTYPE html>
<html>
  <head>
    <title>ConomiApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag 'category', 'data-turbo-track': 'reload' %>
  </head>

  <body>

    <header>
      <div>
      <%= link_to root_path, class: "site-name" do %>
        Conomi
      <% end %>
      <div class="menu">
        <%= link_to "カテゴリー", "#", class: "menu-item" %>
        <%= link_to "マイページ", "#", class: "menu-item" %>
        <% if user_signed_in? %>
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "menu-item" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "menu-item" %>
          <%= link_to "新規登録", new_user_registration_path, class: "menu-item" %>
        <% end %>
      </div>
      <div class="search">
        <%= form_tag "#", method: :get do %>
          <%= text_field_tag :query, nil, placeholder: "検索" %>
          <%= submit_tag "検索" %>
        <% end %>
      </div>
      <div class="new-post">
        <%= link_to '新規投稿', new_question_path, class: "btn" %>
      </div>
    </header>

    <%= yield %>
  </body>
</html>